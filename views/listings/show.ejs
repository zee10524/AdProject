<% layout('layouts/boilerplate') %>

<div class="container py-5">

    <!-- ================= HERO SECTION ================= -->
    <div class="row mb-5">

        <div class="col-lg-8">
            <img src="<%= listing.image.url %>" 
                 class="img-fluid rounded-4 shadow-lg w-100"
                 style="height:450px; object-fit:cover;">
        </div>

        <div class="col-lg-4">

            <div class="card shadow-lg border-0 rounded-4 p-4 sticky-top" style="top:100px;">

                <h3 class="fw-bold"><%= listing.title %></h3>

                <p class="text-muted mb-2">
                    üìç <%= listing.location %>, <%= listing.country %>
                </p>

                <hr>

                <h4 class="fw-bold text-success">
                    ‚Çπ<%= listing.price.toLocaleString('en-IN') %>
                    <span class="badge bg-warning text-dark ms-2">
                        per night
                    </span>
                </h4>

                <p class="small text-muted">
                    üë• Max Guests: <%= listing.maxGuests %><br>
                    üõè Rooms Available: <%= listing.roomsAvailable %>
                </p>

                <hr>

                <% if (currentUser) { %>
                <form action="/listings/<%= listing._id %>/bookings"
                      method="POST"
                      class="row g-2">

                    <div class="col-6">
                        <input type="date" name="checkIn"
                               class="form-control" required>
                    </div>

                    <div class="col-6">
                        <input type="date" name="checkOut"
                               class="form-control" required>
                    </div>

                    <div class="col-6">
                        <input type="number"
                               name="guests"
                               min="1"
                               max="<%= listing.maxGuests %>"
                               class="form-control"
                               placeholder="Guests"
                               required>
                    </div>

                    <div class="col-6">
                        <select name="guide"
                                class="form-control"
                                required>
                            <option value="">Guide?</option>
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <button class="btn btn-success w-100 rounded-pill">
                            Reserve Now
                        </button>
                    </div>

                </form>
                <% } else { %>
                <div class="alert alert-warning text-center">
                    Please <a href="/login">login</a> to book
                </div>
                <% } %>

            </div>
        </div>
    </div>

    <!-- ================= DETAILS SECTION ================= -->
    <div class="row mb-5">

        <div class="col-lg-8">

            <h4 class="fw-bold mb-3">About this property</h4>
            <p class="text-muted"><%= listing.description %></p>

            <p class="text-muted">
                üë§ Listed by: 
                <strong>
                    <%= listing.owner ? listing.owner.username : "Unknown" %>
                </strong>
            </p>

            <% if (listing.amenities && listing.amenities.length > 0) { %>
            <h5 class="fw-bold mt-4">Amenities</h5>
            <div class="row">
                <% listing.amenities.forEach(a => { %>
                    <div class="col-md-6">
                        ‚úî <%= a %>
                    </div>
                <% }) %>
            </div>
            <% } %>

        </div>

    </div>

    <!-- ================= REVIEWS SECTION ================= -->
    <hr class="my-5">

    <h4 class="fw-bold mb-4">‚≠ê Guest Reviews</h4>

    <% 
        let avgRating = 0;
        if (listing.reviews.length > 0) {
            avgRating = listing.reviews.reduce((sum, r) => sum + r.rating, 0) / listing.reviews.length;
        }
    %>

    <% if (listing.reviews.length > 0) { %>

        <div class="mb-4">
            <h5>
                Average Rating: 
                <span class="text-warning fw-bold">
                    <%= avgRating.toFixed(1) %> ‚òÖ
                </span>
                (<%= listing.reviews.length %> reviews)
            </h5>
        </div>

        <% listing.reviews.forEach(review => { %>
        <div class="card border-0 shadow-sm rounded-4 mb-3 p-3">

            <div class="d-flex justify-content-between">

                <div>
                    <% for (let i = 1; i <= 5; i++) { %>
                        <% if (i <= review.rating) { %>
                            <span class="text-warning">‚òÖ</span>
                        <% } else { %>
                            <span class="text-secondary">‚òÜ</span>
                        <% } %>
                    <% } %>
                </div>

                <small class="text-muted">
                    ‚Äî <%= review.author ? review.author.username : "Anonymous" %>
                </small>

            </div>

            <p class="mt-2 mb-0"><%= review.comment %></p>

            <% if (currentUser &&
                   review.author &&
                   currentUser._id.equals(review.author._id)) { %>

            <form method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  class="mt-2"
                  onsubmit="return confirm('Delete review?');">

                <button class="btn btn-sm btn-outline-danger rounded-pill">
                    Delete
                </button>
            </form>

            <% } %>

        </div>
        <% }) %>

    <% } else { %>

        <div class="alert alert-info">
            No reviews yet. Be the first!
        </div>

    <% } %>


    <!-- ================= REVIEW FORM ================= -->
    <div class="card border-0 shadow-lg rounded-4 mt-5 p-4">
        <h5 class="fw-bold mb-3">Leave a Review</h5>

        <% if (currentUser) { %>

        <form action="/listings/<%= listing._id %>/reviews"
              method="POST">

            <div class="mb-3">
                <input type="number"
                       min="1"
                       max="5"
                       name="review[rating]"
                       class="form-control"
                       placeholder="Rating (1-5)"
                       required>
            </div>

            <div class="mb-3">
                <textarea name="review[comment]"
                          class="form-control"
                          rows="3"
                          placeholder="Write your experience..."
                          required></textarea>
            </div>

            <button class="btn btn-dark rounded-pill w-100">
                Submit Review
            </button>

        </form>

        <% } else { %>

        <div class="alert alert-warning">
            Please <a href="/login">login</a> to leave a review.
        </div>

        <% } %>
    </div>


    <!-- ================= OWNER CONTROLS ================= -->
    <% if (currentUser &&
           listing.owner &&
           currentUser._id.equals(listing.owner._id)) { %>

    <div class="text-center mt-5">
        <a href="/listings/<%= listing._id %>/edit"
           class="btn btn-outline-primary rounded-pill px-4 me-2">
           ‚úè Edit
        </a>

        <form method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE"
              class="d-inline"
              onsubmit="return confirm('Delete listing?');">

            <button class="btn btn-outline-danger rounded-pill px-4">
                üóë Delete
            </button>
        </form>
    </div>

    <% } %>


    <!-- ================= BACK BUTTON ================= -->
    <div class="text-center mt-5">
        <a href="/listings"
           class="btn btn-secondary rounded-pill px-4">
           ‚Üê Back to Listings
        </a>
    </div>

</div>
